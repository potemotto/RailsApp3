<%#<h1>ここはユーザー情報を変更するページです。</h1>%>
<h2>User info</h2>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

  <p><label for="inputImage">Image</label></p>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
  <%= f.submit ' Update User ' , class: "btn btn-secondary" %>
  <% end %>
  </div>
  </div>
</div>




